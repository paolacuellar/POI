<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="18dp"
        android:width="20dp"
        android:height="20dp"
        android:gravity="start"
        android:left="12dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <size android:height="30dp"/>
                <solid android:color="@color/white" />
                <corners
                    android:radius="3dp"
                    />
                <stroke
                    android:color="@color/coffee"
                    android:width="3dp"
                    />
            </shape>
        </rotate>
    </item>

    <item
        android:top="16dp"
        android:left="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="14dp"
                />
            <stroke
                android:color="@color/coffee"
                android:width="3dp"
                />
            <solid
                android:color="@color/white"/>
        </shape>
    </item>

    <item android:top="7dp"
        android:left="27dp"
        android:width="20dp"
        android:height="20dp"
        android:gravity="start">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <size android:height="20dp"/>
                <solid android:color="@color/white" />
                <corners
                    android:radius="3dp"
                    />
            </shape>
        </rotate>
    </item>

</layer-list>